@model BusinessModels.MyHotDealsModel

@{
    ViewBag.Title = "HotDeals";
}

<h2>HotDeals</h2>

@using (Html.BeginForm("PlaceDeal", "Some", FormMethod.Post, new { id = "frmPlaceDeal" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MyHotDealsModel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.HotDealCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.HotDealCode,Model.ListHotDeals, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HotDealCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.HotDealDescription, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.HotDealDescription, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Place Deal" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "DashBoard")
</div>
